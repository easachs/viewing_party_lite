<p><%= button_to "Discover Movies", "/users/#{@user.id}/discover", method: :get %></p>

<% if params[:q].present? %>
  <%= render 'search' %>
<% else %>
  <%= render 'top_rated' %>
<% end %>

<% @movies.each_with_index do |movie, index| %>
  <p><%= index + 1 %>.</p>
  <p>Title: <%= movie.title %></p>
  <p>Vote Average: <%= movie.vote_average %></p>
<% end %>